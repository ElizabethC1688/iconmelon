// ELEMENTS
@import '../assets/imports.styl'

/* c2f06a90b22b79c844700683e4327b0c */
.loader-e
	rect 4*gs
	background c-green
	border-radius 50%

/* 874ca3d17c5dd2c3e81c0e853f955a6e */
.legomushroom-e
	display block
	rect 30*gs
	retina 'i/legomushroom'
	border-radius 50%


/* a3c04187903038745cfd8388b6846a61 */
.small-logo-b
	display inline-block
	text-align center
	color c-grey1
	font-size 2.5*gs

	.icon
		rect 8*gs
		margin-bottom (gs/2)

.blinded-e
	background rgba(0,0,0,.75)
	rect 100%
	position fixed
	nw 0
	z-index: 30

/* 684fe5faa1e5f55468916bcff7fb7ae8 */
.main-logo-icon-e
	#main-logo-icon
		#color-green
			fill green
		#color-pink
			fill pink
		#color-red
			fill red

/* a3c04187903038745cfd8388b6846a61 */
.logo-large-e
	rect 20*gs
	padding-top 1px
	&.is-rotated
		transform rotate(15deg)
		-webkit-transform-origin: bottom center;
		-moz-transform-origin: bottom center;
		-o-transform-origin: bottom center;
		transform-origin: bottom center;
	// background url('icons/logo-large.png') no-repeat center center

	.icon
		rect 18*gs
		margin 0 auto
		margin-top gs
		-webkit-transform-origin: bottom center;
		-moz-transform-origin: bottom center;
		-o-transform-origin: bottom center;
		transform-origin: bottom center;
		transform translateZ(0)

/* 745569f548ab5734b69d33d95b3f7074 */
.logo-tiny-e
	rect 4*gs
	// background url('icons/logo-tiny.png') no-repeat center center
	display block
	padding-top 1px
	.icon
		rect 4*gs
		margin 0 auto
		// margin-top 2px
		// display none

/* e8f7ddd21782268ea812c14eaada3957 */
shadowSize = 2px
.input-e
	display block
	bbox()
	border 1px solid c-grey3
	border-radius br
	height 4.5*gs
	outline 0
	background white
	padding-left gs
	padding-right gs
	box-shadow shadowSize shadowSize 0 rgba(rgb(c-grey1), .2)
	color darken(c-grey2-hover, 10)
	fontOfControl()
	placeholder-mixin(c-grey3)

	&:focus
		box-shadow none
		border 1px solid c-green

	&.is-error
		border 1px solid c-red1



