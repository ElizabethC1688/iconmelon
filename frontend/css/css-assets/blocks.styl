@import '../assets/imports.styl'

/* 8e2f71e057587b0892bbe4bab889dc32 */
arrowOffset = 5*gs
.icon-collections-line-b
	position relative
	// display inline-block
	max-width 100%

	> .icons-bl
		height 12*gs
		width 100%
		overflow-y hidden
		overflow-x auto
		white-space nowrap

	.plus-btn-b
		position absolute
		top 50%
		margin-top - 1.5*gs
		z-index: 2
		background-color rgba(255,255,255,.5)
	.left-arrow-bh
		left  - arrowOffset

	.right-arrow-bh
		right - arrowOffset

	.icons-set-b
		display inline-block
		+ .icons-set-b
			margin-left gs - 3px


/* aa37471cadddb8a9885c21df63f63beb */
.icons-set-b
	width 11*gs
	border-radius br
	cursor pointer
	padding-top gs + 2px

	&.is-not-moderated
		opacity .5
	
	&:hover, &.is-check
		background-color rgba(0,0,0,.05)

	> .icons-bl
		width 9*gs
		margin-left (gs/2)
	.icon
		float left
		rect 2*gs
		margin-left gs 
		margin-bottom gs + 2px
		fill c-grey2

	> .text-be
		font-size 2.5*gs
		color white
		textel()
		text-align center
		background-color rgba(0,0,0,.2)
		border-bottom-right-radius br
		border-bottom-left-radius br
		padding 2px 0


/* b3ae71e6b694bf45eec717b27592df6e */
.checkbox-with-label-b
	color c-grey3
	&:hover
		color c-grey2
		.icon
			fill c-grey2
		.checkbox-b
			box-shadow 2px 2px 0 c-grey2
			border 1px solid c-grey2

	label
		font-size 3*gs
		padding-left 1.5*gs
		display inline-block
		cursor pointer
		margin-top - 1px
	.checkbox-b
		float left

/* d72ce917d1c414ba1d72da724f3a7ec4 */
.checkbox-b
	rect 2.5*gs + 1px
	position relative
	&:hover
		box-shadow 2px 2px 0 c-grey2
		border 1px solid c-grey2
		.icon
			fill c-grey2

	input
		opacity 0
		rect 100%
		position absolute
		nw 0
		z-index 2
		cursor pointer
		&:checked + .icon
			display block
	.icon
		position absolute
		rect 1.5*gs
		top  (gs/2)
		left (gs/2)
		display none
		z-index 1

/* df265d9e31b7bad5b31e1545831142ba */
.submit-icon-collection-b
	border-left 2px solid c-grey3
	padding-left 8*gs
	padding-top 4*gs

	> .icons-bl
		> .icons-bll
			overflow hidden

	.plus-btn-b
		margin-top 3*gs
		margin-left 3*gs
		float left

	> .header-be
		font-size 4*gs
		color c-grey3
		margin-bottom gs - 1px

	.submit-icon-b
		float left

/* 7fc5887b7434ee59fc7d648ff4f4541d */
.plus-btn-b
	rect 3*gs
	border 1px solid c-grey3
	border-radius 50%
	cursor pointer
	overflow hidden
	position relative

	&:hover
		// background-color rgba(0,0,0,.05)
		border-color c-grey2
		.icon
			fill c-grey2


	.icon
		rect gs
		margin 0 auto
		margin-top gs - 1px
		// hl c-red1

	#fileupload
		opacity 0
		z-index: 1
		position absolute
		cursor pointer
		padding-left 4*gs
		nw 0
		rect 100%

		

/* 64fa8abebcd9bc5daf0b64b066612b83 */
marginTop = 2*gs
.collection-credits-b
	width 36*gs
	padding-right 5*gs
	padding-left 5*gs
	padding-top 4*gs
	padding-bottom 6*gs

	/* 0d0ce61b4cec5920d846eead8175f609 */
	&.is-edit
		.icon-set-l
			display block
		.checkbox-with-label-b
