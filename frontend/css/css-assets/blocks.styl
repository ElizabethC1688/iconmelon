/* 1a4f5ba6fd48663826fe4d9ef3f3a2dd */
.submit-icon-b
	width 22*gs
	padding 2*gs
	position relative
	brad()

	&.is-error
		border 1px solid c-red1

	&:hover
		background-color rgba(0,0,0,.025)

		.close-bh
