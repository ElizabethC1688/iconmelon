.icon-select-view-b
	> .controls-bl
		margin-bottom 5*gs

		> .btn-b
			float right
			width 20*gs
			margin-right 3*gs

		> .input-with-icon-b
			float left
			width 20*gs

	> .content-bl
		hl c-green
		clear both
		margin-top 8*gs


/* 19d8650be161cd15c32961dab15941ab */
.main-logo-b
	width 22*gs
	text-align center

	> .logo-large-e
		margin 0 auto

	> .name-be
		font-size 52px
		margin-top - 2*gs + 2px

	> .description-be
		font-size 19px
		margin-top - (gs/2)


/* 9f594b08a3b87a497c4f5b4592e970e4 */
.main-header-b
	font-size 20px
	color c-grey1
	height 7*gs
	padding-top 2*gs + 2px
	padding-left 3*gs
	background-color rgba(255,255,255,.9)
	position fixed
	nw 0
	width 100%
	z-index: 10

	> .loading-be
		width 	 0%
		height 	 gs
		background-color c-green
		left 	 0
