/* 79578151cf3186d5d1ece15f3defd4b7 */
.icon-with-text-b
	width  7*gs
	height 7*gs + 2px
	padding-top 1px
	border-radius br
	color c-grey3
	cursor pointer
	border 1px solid transparent
	position relative
	cbox()

	&:hover, &.is-check
		color c-green

		> .icon
			fill c-green

	&:hover
		background-color rgba(0,0,0,.05)

	// /* 5ac5220f1049eb20597200b73202b468 */
	// &.is-check
	// 	border 1px solid c-grey3

	// 	> .bullet-be
	// 		display block

	> .bullet-be
		position absolute
		display none II
		rect gs
		background-color white
		border-radius 50%
		border 1px solid c-grey3
		left 100%
		margin-left - (gs/2)
		top 50%
		bbox()
		color white
		font-size 0
		z-index: 1

		&:hover, &.is-expanded
			width 7*gs
			border-radius br
			font-size 12px
			line-height 2*gs - 2px
			padding-left 3*gs
			height 2*gs
			z-index: 2
			border 0

	> .hover-be
		margin-top - 2*gs - 1px
		&.is-check, &:hover, &.is-expanded
			border 0
			background-color c-red1

		&:hover, &.is-expanded
			margin-top - 2.5*gs - 1px


	> .active-be
		margin-top - gs + 2px
		&.is-check, &:hover,  &.is-expanded
			border 0
			background-color c-red2

		&:hover, &.is-expanded
			margin-top - 1.5*gs + 2px


	> .focus-be
		margin-top  5px
		&.is-check, &:hover,  &.is-expanded
			border 0
			background-color c-green

		&:hover, &.is-expanded
			margin-top - (gs/2) + 5px



	> .icon
		margin 0 auto
		margin-top 1px
		// rect 3*gs
	
	> .text-be
		font-size 20px
		text-align center
		margin-top 2px
		max-width 100%
		padding 0 (gs/2)
		textel()



shadowSize = 2px
/* caa0608fbfea0f959bf1ce698d2327e6 */
.input-with-icon-b
	position relative
	display inline-block

	.input-e
		padding-left 5*gs
		float left
		width 100%

		&:focus + .icon
			fill c-green

	.icon
		position absolute
		left 	gs + 4
		top 	50%
		margin-top - gs - 2px
		rect 	2.5*gs

	

shadowSize = 2px
/* e8dcf44767bba63ed03de6691a1a44f7 */
.btn-b
	btnHeight = 4.5*gs 
	background c-green
	height 		btnHeight
	line-height btnHeight
	position relative
	display: inline-block
	padding 0 4*gs
	color white
	cursor pointer
	border-radius br
	box-shadow shadowSize shadowSize 0 rgba(rgb(c-grey1), .2)
	font-size 20px
	text-align center

	&:hover
		background c-green-hover
	&:active
		transform translate(shadowSize,shadowSize)
		box-shadow none
		background c-green
	&:before
		content ''
		position absolute
		nw 0
		rect 100%
	&:active
		&:before
			transform translate(- shadowSize,- shadowSize)

	
	/* 9343b5637912148f603dc8c154382c2c */
	&.is-red1
		background-color c-red1

		&:hover
			background c-red1-hover
		&:active
			background c-red1

	/* 58b21870f4e247e374c47f1d6d823c88 */
	&.is-iconed
		padding 0
		width 100%
		// width 4.5*gs
		.icon
			rect gs
			fill white
			position absolute
			nw 50%
			margin-left - (gs/2)
			margin-top - (gs/2)

	/* 3dd69df51d0449f7f9db27fe23b7cef6 */
	&.is-inactive
		background-color c-grey3
		box-shadow none
		cursor default

		&:active
			transform none
	
	/* 852b2351c7cfac250ba678d22d731ee3 */
	&.is-counter
		padding-left 8*gs

		&:after
			content attr(data-cnt)
			rect 3*gs
			display inline-block
			background-color c-red1
			border-radius 50%
			position absolute
			top 50%
			margin-top - (1.5*gs)
			left 2*gs + (gs/2)
			text-align center
			color white
			line-height 3*gs + 2px
			bbox()

		&.is-2-digits
			// 4!
			&:after
				width 3*gs + 2px
				font-size 18px

		&.is-3-digits
			// 4!
			&:after
				width 3*gs + 2px
				font-size 16px

