@import '../assets/imports'

.support-p
	padding 10*gs 4*gs
	opacity: 0

	> .header-pe
		font-size 4*gs
		line-height 4*gs
		color c-grey2
		margin-bottom 6*gs
		margin-top - (gs/2)
		padding-left 4*gs
		@media all and (max-width:1200px)
			font-size 	3*gs
			line-height 3*gs
			margin-bottom 3*gs
			text-align center

	.support-blocks-pl
		box-shadow 0 0 0 gs rgba(0,0,0,.03)
		border-radius br + 2px
		@media all and (max-width:1200px)
			box-shadow none

		.support-block-b
			float left
			width 50%
			height 92*gs
			border gs solid rgba(0,0,0,.03)
			position relative
			@media all and (max-width:1200px)
				clear both
				width 64*gs
				margin: 0 auto
				float none
				height auto
				padding 4*gs 4*gs 12*gs

				+ .support-block-b
					margin-top 2*gs

		form
			opacity 0
			position: absolute
			nw 0
			rect 100%

		input
			rect 100%

			


